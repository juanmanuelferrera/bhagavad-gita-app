{
  "name": "bhagavad-gita-app",
  "version": "1.0.0",
  "description": "A searchable version of the Bhagavad-gita As It Is by A. C. Bhaktivedanta Swami Prabhupada.",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "build": "npx electron-builder --win",
    "build:mac": "npx electron-builder --mac",
    "build:linux": "npx electron-builder --linux",
    "build:all": "npx electron-builder -mwl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juanmanuelferrera/bhagavad-gita-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/juanmanuelferrera/bhagavad-gita-app/issues"
  },
  "homepage": "https://github.com/juanmanuelferrera/bhagavad-gita-app#readme",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.bhagavadgita.app",
    "productName": "Bhagavad-gita",
    "files": [
      "electron.js",
      "index.html"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.education"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "category": "Education"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
